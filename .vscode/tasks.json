{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++20: g++.exe 生成活动文件", // 与launch.json名字一致
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // <--- 关键在这里，这样点击后默认运行
            },
            "detail": "调试器生成的任务。"
        },
    ],
    "version": "2.0.0"
}